@model Carro

@{
    ViewData["Title"] = "Excluir Carro";
}

<div class="container_ex">
    <div class="header-section text-center mb-4">
        <h2 class="header-title text-danger">Excluir Carro</h2>
        <p class="text-white">Tem certeza que deseja excluir este carro?</p>
    </div>

    <div class="car-card text-center">
        <p><strong>🚗 Marca:</strong> @Model.Marca</p>
        <hr class="divider">
        <p><strong>📌 Modelo:</strong> @Model.Modelo</p>
        <hr class="divider">
        <p><strong>💰 Preço:</strong> R$ @Model.Preco.ToString("N2").Replace(",", ".")</p>
    </div>

    <div class="btn-container">
        <form asp-action="ExcluirConfirmado" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn-danger-modern">Confirmar Exclusão</button>
        </form>
        <a asp-action="Index" class="btn-modern-cancel">Voltar</a>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: white;
        font-family: 'Arial', sans-serif;
    }

    .container_ex {
        max-width: 600px;
        margin: auto;
        padding: 20px;
    }

    .header-section {
        margin-bottom: 20px;
    }

    .header-title {
        font-size: 2rem;
        font-weight: bold;
        text-shadow: 0px 10px 15px rgba(255, 0, 0, 0.3); 
    }

    .car-card {
        background: #1e1e1e;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 10px 30px rgba(255, 0, 0, 0.3); 
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .divider {
        border: 0;
        height: 1px;
        background: rgba(255, 255, 255, 0.2);
        margin: 10px 0;
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

    .btn-danger-modern, .btn-modern-cancel {
        flex: 1;
        padding: 12px;
        border-radius: 30px;
        font-weight: bold;
        transition: all 0.3s;
        text-align: center;
        text-decoration: none;
    }

    .btn-danger-modern {
        background: linear-gradient(90deg, #ff0000, #b00000);
        color: white;
        border: none;
    }

        .btn-danger-modern:hover {
            background: linear-gradient(90deg, #b00000, #ff0000);
            transform: scale(1.05);
        }

    .btn-modern-cancel {
        background: #6c757d;
        color: white;
    }

        .btn-modern-cancel:hover {
            background: #5a6268;
            transform: scale(1.05);
        }
</style>