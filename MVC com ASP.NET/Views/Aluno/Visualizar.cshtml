@model Aluno

@{
    ViewData["Title"] = "Detalhes do Aluno";
}

<div class="container_details">
    <div class="header-section text-center mb-4">
        <h2 class="header-title">Detalhes do Aluno</h2>
        <p class="text-secondary">Informações detalhadas sobre o aluno.</p>
    </div>

    <div class="car-details-card">
        <div class="row mb-3">
            <div class="col-12 col-md-6">
                <p><strong>👤 Nome:</strong> @Model.Nome</p>
            </div>
            <div class="col-12 col-md-6">
                <p><strong>🆔 RA:</strong> @Model.RA</p>
            </div>
        </div>

        <hr class="divider" />

        <div class="row">
            <div class="col-12">
                <p><strong>📅 Data de Nascimento:</strong> @Model.DataNascimento.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn-modern">Voltar</a>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: white;
        font-family: 'Arial', sans-serif;
    }

    .container_details {
        max-width: 800px;
        margin: auto;
        padding: 40px;
    }

    .header-section {
        margin-bottom: 30px;
    }

    .header-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #1db954;
    }

    .text-secondary {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.1rem;
    }

    .car-details-card {
        background: #1e1e1e;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(29, 185, 84, 0.4);
        font-size: 1.3rem;
        line-height: 1.8;
        margin-bottom: 30px;
    }

    .divider {
        border: 0;
        height: 1px;
        background: white;
        margin: 20px 0;
        opacity: 0.4;
    }

    .btn-modern {
        background: linear-gradient(90deg, #1db954, #117a37);
        color: white;
        padding: 18px 35px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.2rem;
        letter-spacing: 1px;
        transition: all 0.3s;
    }

        .btn-modern:hover {
            background: linear-gradient(90deg, #117a37, #1db954);
            transform: scale(1.1);
        }
</style>
