@model Celular

@{
    ViewData["Title"] = "Detalhes do Celular";
}

<div class="container_details">
    <div class="header-section text-center mb-4">
        <h2 class="header-title">📋 Detalhes do Celular</h2>
        <p class="text-secondary">Informações completas sobre o aparelho.</p>
    </div>

    <div class="car-details-card">
        <div class="row gy-4">
            <div class="col-12 col-md-6">
                <p><strong>📱 Marca:</strong> @Model.Marca</p>
            </div>
            <div class="col-12 col-md-6">
                <p><strong>📌 Modelo:</strong> @Model.Modelo</p>
            </div>
            <div class="col-12 col-md-6">
                <p><strong>💰 Preço:</strong> R$ @Model.Preco.ToString("N2")</p>
            </div>
            <div class="col-12 col-md-6">
                <p><strong>📅 Data de Fabricação:</strong> @Model.Data.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn-modern">Voltar</a>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: white;
        font-family: 'Arial', sans-serif;
    }

    .container_details {
        max-width: 800px;
        margin: auto;
        padding: 40px 20px;
    }

    .header-section {
        margin-bottom: 30px;
    }

    .header-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #1db954;
    }

    .text-secondary {
        color: rgba(255, 255, 255, 0.75);
        font-size: 1.1rem;
    }

    .car-details-card {
        background: #1e1e1e;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0px 4px 20px rgba(29, 185, 84, 0.3);
        font-size: 1.25rem;
        line-height: 1.8;
    }

        .car-details-card p {
            margin: 0;
            padding: 8px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

    .btn-modern {
        background: linear-gradient(90deg, #1db954, #117a37);
        color: white;
        padding: 14px 30px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        transition: all 0.3s;
        display: inline-block;
    }

        .btn-modern:hover {
            background: linear-gradient(90deg, #117a37, #1db954);
            transform: scale(1.05);
        }


    .car-details-card {
        font-size: 1.1rem;
        padding: 20px;
    }

    .btn-modern {
        font-size: 1rem;
        padding: 12px 24px;
    }

    }
</style>
