<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ASP .NET MVC</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --primary-color: #1e1e1e;
            --secondary-color: #9333ea;
            --accent-color: #007bff;
            --light-color: #f8f9fa;
            --dark-color: #121212;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-color: var(--dark-color);
            color: var(--light-color);
            font-family: 'Arial', sans-serif;
        }

        .navbar {
            background: var(--primary-color);
            padding: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

            .navbar a {
                color: var(--light-color) !important;
                font-weight: bold;
                text-transform: uppercase;
                transition: color 0.3s, transform 0.3s;
                margin-right: 30px;
            }

                .navbar a:hover {
                    color: var(--accent-color) !important;
                    transform: translateY(-3px);
                }

        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.5);
        }

            .navbar-toggler:focus {
                box-shadow: none;
            }

        .navbar-nav {
            margin-left: auto;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

            .navbar-nav .nav-item {
                margin-left: 20px;
            }

        main {
            flex: 1;
            padding-top: 40px;
            text-align: center;
        }

        footer {
            background: var(--primary-color);
            color: var(--light-color);
            text-align: center;
            padding: 20px;
            margin-top: 40px;
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.2);
            border-radius: 15px 15px 0 0;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Sistema MVC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Carro" asp-action="Index">Carros</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Celular" asp-action="Index">Celulares</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Evento" asp-action="Index">Eventos</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - ASP .NET MVC - Leonardo e Pedro.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
